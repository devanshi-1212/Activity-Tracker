{
  "name": "Activity Tracker",
  "description": "Take control of your time. Track your website usage. Boost your productivity and optimize your day.",
  "author": "debu-san",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "clock.png",
    "48": "clock.png",
    "128": "clock.png"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_title": "click here to know more",
    "default_icon": {
      "16": "clock.png",
      "48": "clock.png",
      "128": "clock.png"
    }
  },
  "permissions": ["tabs", "activeTab", "storage", "alarms", "notifications"],
  "options_page": "./options/options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ]
}
